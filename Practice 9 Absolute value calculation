n = float(input('\nEnter the number: '))
absolute_value = 0

if (n > 0):
    absolute_value = n
    print('For the entered number: {}'.format(n))
    print('The absolute value is: {}'.format(absolute_value))
else:
    print('For the entered number: {}'.format(n))
    absolute_value = (-1*n)
    print('The absolute value is: {}'.format(absolute_value))
