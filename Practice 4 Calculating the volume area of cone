Pi = 3.1416
r = float(input('Enter the value of the radius : '))
h = float(input('Enter the value for the height: '))
def calculation_volumen_cone(Pi,r,h):
    if (r==0 or h==0):
        print('Sorry the Radius and height of the cylinder must be greater than 0')
    else:
        return (1/3*Pi*r*r)*h
    
def calculation_total_area_cone(Pi,r,h):
    if(r==0 or h==0):
        print('Sorry the Radius and height of the cylinder must be greater than 0')
    else:
        return (Pi*r*h)+(Pi*r*r)
V = calculation_volumen_cone(Pi, r,h)
ATC = calculation_total_area_cone(Pi, r,h)
print('\nThe volume of the cone calculated is: {}'.format(V))
print('\nThe total surface area of the cone is {}'.format(ATC))
